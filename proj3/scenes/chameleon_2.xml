<lxs>
    <scene root="root" axis_length="100"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="200" angle="45">
            <from x="0" y="15" z="25" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="viewFromBehind" near="0.1" far="200" angle="45">
            <from x="-35" y="25" z="-48" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="omniLight" enabled="0">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <omni id="Light" enabled="1">
            <location x="-5" y="20" z="5" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <spot id="spotlight" enabled="1" angle="30" exponent="2">     
            <location x="20" y="45" z="-45" w="0.0" />
            <target x="-15" y="6" z="-5" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.00" />
        </spot>
    </lights>

    <textures>
        <texture id="tableTexture" file="scenes/images/tableWood.jpg" />
    </textures>

    <materials>
        <material id="nullMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="tableMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.65" g="0.5" b="0.36" a="1.0" />
            <diffuse r="0.65" g="0.5" b="0.36" a="1.0" />
            <specular r="0.65" g="0.5" b="0.36" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
            <translate x="10" y="0" z="0" />
        </transformation>
        <transformation id="neutralTransformation">
            <translate x="0" y="0" z="0" />
        </transformation>
    </transformations>

    <animations>
        <animation id="switchPlayer">
            <keyframe instant="4">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="10" >
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="180" angle_z="0"/>
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>     
    </animations>

    <primitives>
        <primitive id="soil">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>

        <primitive id="roof">
            <cylinder base="2.5" top="0" height="2" slices="30" stacks="15"/>
        </primitive>

        <primitive id="door">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="joint">
            <sphere radius="0.2" slices="50" stacks="50"/>
        </primitive>

        <primitive id="handrail">
            <torus inner = "0.05" outer = "4.5" slices="100" loops="100" />
        </primitive>

        <primitive id="wing_cloth">
            <triangle x1="0" y1="0" z1="0" x2="-3" y2="-5.5" z2="0" x3="0" y3="-5.5" z3="0.5" />
        </primitive>

        <primitive id="nurbSoil">
            <plane npartsU = "20" npartsV = "20" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="nullMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="Table" />
            </children>
        </component>

        <component id="Table">
            <transformation>
                <translate x="10" y="-0.1" z="-10" />
                <scale x="43" y="0" z="43" /> 
                <!--<rotate axis="x" angle="-90" />-->
            </transformation>
            <materials>  
                <material id="tableMaterial" />
            </materials>
            <texture id="tableTexture"/>
            <children>
                <primitiveref id="nurbSoil" />
            </children>
        </component>
    </components>

    <board>
        <blackTile componentref=""/>
        <whiteTile componentref=""/>
    </board>

    <auxBoard componentref=""/>

    <pieces>
        <horse componentref=""/>
        <bishop componentref=""/>
    <pieces/>
</lxs>