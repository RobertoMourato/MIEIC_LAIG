        </component>

        <component id="Windmill">
            <transformation>
                <translate x="0" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="Building" />
            </children>
        </component>

        <component id="Building">
            <transformation>
            <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
                <material id="Cinza" />
                <material id="Azul" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="Walls" />
            </children>
        </component>

        <component id="Walls">
            <transformation>
                <translate x="0" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="demoMaterial" />
                <material id="Verde" />    
                <material id="Cinza" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

